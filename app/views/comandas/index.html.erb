<p id="notice"><%= notice %></p>

<h1>Comandas</h1>

<table>
  <thead>
    <tr>
      <th>Nome cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comandas.each do |comanda| %>
      <tr>
        <td><%= comanda.nome_cliente %></td>
        <td><%= link_to 'Show', comanda %></td>
        <td><%= link_to 'Edit', edit_comanda_path(comanda) %></td>
        <td><%= link_to 'Destroy', comanda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

