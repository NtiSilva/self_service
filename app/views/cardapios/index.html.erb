<p id="notice"><%= notice %></p>

<h1>Cardapios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Adicionais</th>
      <th>Categoria</th>
      <th>Tempo preparo</th>
      <th>Preco</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cardapios.each do |cardapio| %>
      <tr>
        <td><%= cardapio.nome %></td>
        <td><%= cardapio.descricao %></td>
        <td><%= cardapio.adicionais %></td>
        <td><%= cardapio.categoria %></td>
        <td><%= cardapio.tempo_preparo %></td>
        <td><%= cardapio.preco %></td>
        <% if cardapio.foto%>
          <figure class="image is-3by3">
            <%= image_tag cardapio.foto %>
          </figure>
        <% else %>
           <td><%= cardapio.foto %></td>
        <% end %>
        <td><%= link_to 'Show', cardapio %></td>
        <td><%= link_to 'Edit', edit_cardapio_path(cardapio) %></td>
        <td><%= link_to 'Destroy', cardapio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

